<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="hautelook_alice.generator.adapter.doctrine_orm.class">Hautelook\AliceBundle\Generator\Adapter\DoctrineORM</parameter>
        <parameter key="hautelook_alice.generator.adapter_registry.class">Hautelook\AliceBundle\Generator\AdapterRegistry</parameter>
    </parameters>

    <services>

        <service id="hautelook_alice.generator.adapter.doctrine_orm" class="%hautelook_alice.generator.adapter.doctrine_orm.class%">
            <argument type="service" id="doctrine" />
        </service>

        <service id="hautelook_alice.generator.adapter_registry" class="%hautelook_alice.generator.adapter_registry.class%">
            <argument type="collection">
                <argument type="service" key="orm" id="hautelook_alice.generator.adapter.doctrine_orm" />
            </argument>
        </service>

    </services>

</container>
